    "def value_to_mark(v):\n",
    "    if v == 1:\n",
    "        return \"X\"\n",
    "    elif v == 2:\n",
    "        return \"O\"\n",
    "    else:\n",
    "        return \" \"\n",
    "\n",
    "\n",
    "def draw_board(board):\n",
    "    n = len(board)       # rows\n",
    "    m = len(board[0])    # cols\n",
    "\n",
    "    for r in range(n):\n",
    "        print(\"   \" + (\"--- \" * m))\n",
    "        line = \"  |\"\n",
    "        for c in range(m):\n",
    "            mark = value_to_mark(board[r][c])\n",
    "            line += f\" {mark} |\"\n",
    "        print(line)\n",
    "\n",
    "    print(\"   \" + (\"--- \" * m))\n"
