   "source": [
    "def available_moves(board):\n",
    "    moves = []\n",
    "    n = len(board)\n",
    "\n",
    "    for r in range(n):\n",
    "        for c in range(n):\n",
    "            if board[r][c] == 0:\n",
    "                moves.append((r, c))\n",
    "\n",
    "    return moves\n",
    "\n",
    "\n",
    "\n",
    "def minimax(board, current_player, max_player, depth, max_depth):\n",
    "    status = game_status(board)\n",
    "\n",
    "    if status == max_player:\n",
    "        return 1       \n",
    "    if status == 0:\n",
    "        return 0       # draw\n",
    "    if status != -1 and status != max_player:\n",
    "        return -1      \n",
    "    if depth >= max_depth:\n",
    "        return 0\n",
    "\n",
    "    moves = available_moves(board)\n",
    "    opp = 2 if current_player == 1 else 1\n",
    "\n",
    "    if current_player == max_player:\n",
    "        best = -999\n",
    "        for (r, c) in moves:\n",
    "            board[r][c] = current_player\n",
    "            score = minimax(board, opp, max_player, depth + 1, max_depth)\n",
    "            board[r][c] = 0\n",
    "            if score > best:\n",
    "                best = score\n",
    "        return best\n",
    "\n",
    "    else:\n",
    "        best = 999\n",
    "        for (r, c) in moves:\n",
    "            board[r][c] = current_player\n",
    "            score = minimax(board, opp, max_player, depth + 1, max_depth)\n",
    "            board[r][c] = 0\n",
    "            if score < best:\n",
    "                best = score\n",
    "        return best\n",
    "\n",
    "\n",
    "def computer_move_minimax(board, player, max_depth=6):\n",
    "    \n",
    "    moves = available_moves(board)\n",
    "    opp = 2 if player == 1 else 1\n",
    "\n",
    "    best_score = -999\n",
    "    best_move = None\n",
    "\n",
    "    for (r, c) in moves:\n",
    "        board[r][c] = player\n",
    "        score = minimax(board, opp, player, 1, max_depth)\n",
    "        board[r][c] = 0\n",
    "\n",
    "        if score > best_score:\n",
    "            best_score = score\n",
    "            best_move = (r, c)\n",
    "    if best_move is None:\n",
    "        best_move = random.choice(moves)\n",
    "\n",
    "    place_mark(board, player, best_move[0], best_move[1])\n"
   ]
