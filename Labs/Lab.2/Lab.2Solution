  {
   "cell_type": "code",
   "execution_count": 50,
   "metadata": {},
   "outputs": [],
   "source": [
    "def place_mark(board, player, row, col):\n",
    "    n = len(board)\n",
    "\n",
    "    if row < 0 or row >= n or col < 0 or col >= n:\n",
    "        return False\n",
    "\n",
    "    if board[row][col] != 0:\n",
    "        return False\n",
    "\n",
    "    board[row][col] = player\n",
    "    return True\n"
   ]
