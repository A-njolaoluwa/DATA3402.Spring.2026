    "def play_tic_tac_toe(n):\n",
    "\n",
    "    board = make_board(n)\n",
    "    player = 1\n",
    "\n",
    "    while True:\n",
    "        draw_labeled(board)\n",
    "\n",
    "        player_move(board, player)\n",
    "\n",
    "        status = check_winner(board)\n",
    "\n",
    "        if status == 1:\n",
    "            draw_labeled(board)\n",
    "            print(\"Player 1 (X) wins!\")\n",
    "            break\n",
    "        elif status == 2:\n",
    "            draw_labeled(board)\n",
    "            print(\"Player 2 (O) wins!\")\n",
    "            break\n",
    "        elif status == 0:\n",
    "            draw_labeled(board)\n",
    "            print(\"It's a draw!\")\n",
    "            break\n",
    "\n",
    "        player = 2 if player == 1 else 1\n"
   ]
